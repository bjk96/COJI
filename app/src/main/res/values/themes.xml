<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COJI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">#005070</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00B0D0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textColor">@color/black</item>
        <item name="selectableSpinner">#D0D0D0</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.font" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/nanum_square_acb</item>
    </style>

    <style name="Widget.AppCompat.ImageButton.search" parent="Widget.AppCompat.ImageButton">
        <item name="strokeColor">#007090</item>
        <item name="colorButtonNormal">#007090</item>
    </style>

    <style name="DropdownOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>